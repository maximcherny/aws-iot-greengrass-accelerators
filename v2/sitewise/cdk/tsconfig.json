{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./bin",
    "paths": {
      "@cdkConstructs/*": ["../../../cdk-constructs/*"]
    }
  },
  "references": [
    { "path": "../../cdk-constructs/GreengrassV2Component" },
    { "path": "../../cdk-constructs/GreengrassV2Deployment" },
    { "path": "../../cdk-constructs/IotPolicy" },
    { "path": "../../cdk-constructs/IotThingGroup" }
  ],
  "exclude": ["node_modules", "cdk.out"]
}
